# Copy this file to `.env` and fill with your actual values for local development
# MongoDB Atlas connection string (for cloud deployment)
# Example: mongodb+srv://<user>:<password>@cluster0.xxxxx.mongodb.net/?retryWrites=true&w=majority
MONGO_URI=""

# Name of the database to use inside MongoDB
MONGO_DBNAME="plansphere"

# Flask secret key for session management
SECRET_KEY="change-this-to-a-long-random-string"

# Optional: SQL database URL (local development defaults to SQLite)
SQLALCHEMY_DATABASE_URI="sqlite:///timetable.db"

# Port to run the Flask app on (local development)
PORT="5000"
